<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textNota1"
        android:layout_width="279dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:autofillHints=""
        android:background="?android:attr/colorFocusedHighlight"
        android:ems="10"
        android:hint="@string/nota1"
        android:inputType="textPersonName"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textNota2"
        android:layout_width="279dp"
        android:layout_height="62dp"
        android:layout_marginTop="184dp"
        android:autofillHints=""
        android:background="?android:attr/colorFocusedHighlight"
        android:ems="10"
        android:hint="@string/nota2"
        android:inputType="textPersonName"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/numeroFalta"
        android:layout_width="279dp"
        android:layout_height="62dp"
        android:layout_marginTop="288dp"
        android:autofillHints=""
        android:background="?android:attr/colorFocusedHighlight"
        android:ems="10"
        android:hint="@string/falta"
        android:inputType="textPersonName"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numeroFalta"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="237dp"
        android:layout_height="226dp"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalcular"
        app:layout_constraintVertical_bias="0.422" />

</androidx.constraintlayout.widget.ConstraintLayout>